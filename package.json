{
  "name": "travel-suite",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "jest",
    "test:unit": "jest --testPathIgnorePatterns='/__tests__/integration/'",
    "test:integration": "jest --config jest.config.integration.cjs",
    "test:api": "jest --config jest.config.api.cjs",
    "test:watch": "jest --watch",
    "test:security": "jest __tests__/security",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2 --testPathIgnorePatterns='/__tests__/integration/'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "smoke-test": "./scripts/smoke-test.sh",
    "test:smoke": "./scripts/smoke-test.sh",
    "precommit": "npm run build",
    "prepare": "node -e \"if(process.env.CI!=='true'&&!process.env.VERCEL)require('husky')()\"",
    "db:setup": "node scripts/setup-database.js",
    "db:verify": "node scripts/verify-database.js",
    "type-check": "tsc --noEmit",
    "validate": "npm run format:check && npm run lint && npm run type-check && npm run test"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@deepgram/sdk": "^4.11.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@google/generative-ai": "^0.24.1",
    "@sentry/nextjs": "^10.32.1",
    "@stripe/react-stripe-js": "^5.2.0",
    "@stripe/stripe-js": "^8.1.0",
    "@supabase/ssr": "^0.8.0",
    "@supabase/supabase-js": "^2.89.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/pg": "^8.15.5",
    "@upstash/redis": "^1.36.0",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "isomorphic-dompurify": "^2.26.0",
    "jose": "^6.1.1",
    "mammoth": "^1.11.0",
    "next": "^15.5.7",
    "pdf-parse": "^1.1.1",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-datepicker": "^8.9.0",
    "react-day-picker": "^9.13.0",
    "react-dom": "19.1.0",
    "react-image-crop": "^11.0.10",
    "resend": "^6.6.0",
    "stripe": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "xlsx": "^0.18.5",
    "zod": "^4.1.12",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.57.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.30",
    "@types/node-fetch": "^2.6.13",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/stripe": "^8.0.416",
    "@types/uuid": "^10.0.0",
    "axe-core": "^4.11.0",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "googleapis": "^171.0.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "node-fetch": "^2.7.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "typescript": "^5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  }
}
