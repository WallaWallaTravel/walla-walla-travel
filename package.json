{
  "name": "travel-suite",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "test": "jest",
    "test:api": "jest --config jest.config.api.cjs",
    "test:watch": "jest --watch",
    "test:security": "jest __tests__/security",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "prepare": "node -e \"if(process.env.CI!=='true'&&!process.env.RAILWAY_ENVIRONMENT)require('husky')()\"",
    "db:setup": "node scripts/setup-database.js",
    "db:verify": "node scripts/verify-database.js",
    "db:studio": "npx prisma studio",
    "db:pull": "npx prisma db pull",
    "db:push": "npx prisma db push",
    "db:generate": "npx prisma generate",
    "type-check": "tsc --noEmit",
    "validate": "npm run format:check && npm run lint && npm run type-check && npm run test"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@deepgram/sdk": "^4.11.2",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@google/generative-ai": "^0.24.1",
    "@stripe/react-stripe-js": "^5.2.0",
    "@stripe/stripe-js": "^8.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/dompurify": "^3.0.5",
    "@types/pg": "^8.15.5",
    "bcryptjs": "^3.0.3",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.5",
    "express": "^5.1.0",
    "isomorphic-dompurify": "^2.26.0",
    "jose": "^6.1.1",
    "next": "15.5.2",
    "openai": "^6.8.1",
    "pg": "^8.16.3",
    "react": "19.1.0",
    "react-datepicker": "^8.9.0",
    "react-dom": "19.1.0",
    "resend": "^6.4.1",
    "stripe": "^19.1.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/eslintrc": "^3",
    "@prisma/client": "^6.18.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/stripe": "^8.0.416",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.35.0",
    "eslint-config-next": "^15.5.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "node-fetch": "^2.7.0",
    "prettier": "^3.6.2",
    "prisma": "^6.18.0",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "typescript": "^5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  }
}
